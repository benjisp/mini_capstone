<h1>Edit Products</h1>

<form action="/products/<%= @product.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>
    Product Name: <input type="text" name="name" value="<%= @product.name %>">
  </div>
  <div>
    Price: <input type="number" name="price" value="<%= @product.price %>">
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @product.description %>">
  </div>
  <div>
    Supplier ID: <input type="number" name="supplier_id" value="<%= @product.supplier_id %>">
  </div>
  <input type="submit" value="Edit Product">
</form>